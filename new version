        <div class="bg-primary-dark p-8 rounded-xl shadow-2xl max-w-sm w-full border border-accent-orange transform transition-transform duration-300 scale-90 text-secondary-light">
            <h3 id="modal-title" class="text-3xl font-bold text-accent-cyan mb-4">External Link</h3>
            <p id="modal-text" class="text-gray-300 mb-6">This button would link you directly to the Eventbrite page for ticket registration in a live application.</p>
            <button onclick="hideConfirmation()" class="w-full bg-accent-orange hover:bg-secondary-light text-nasuwt-blue font-semibold py-3 rounded-lg transition duration-300">
                Acknowledge
            </button>
        </div>
    </div>

    <script>
        // --- JavaScript for Interactivity ---

        // 1. Mobile Menu Toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // 2. Hide mobile menu on link click (for smooth scrolling)
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                // Wait briefly for scroll animation to start before hiding
                setTimeout(() => {
                    mobileMenu.classList.add('hidden');
                }, 100);
            });
        });

        // 3. Custom Modal Functionality (Used instead of alert/confirm)
        const modal = document.getElementById('confirmation-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalText = document.getElementById('modal-text');

        function showConfirmation(type) {
            // Only 'eventbrite' remains for the confirmation modal logic
            if (type !== 'eventbrite') return;
            
            const title = 'Eventbrite Registration';
            const text = 'This button would link you directly to the **Eventbrite page** for ticket registration in a live application.';

            modalTitle.textContent = title;
            modalText.innerHTML = text; // Use innerHTML to handle bolding within the modal text

            modal.classList.remove('hidden');
            // Force a reflow before applying opacity and scale changes for transition
            void modal.offsetWidth; 
            modal.classList.remove('opacity-0');
            modal.querySelector('div').classList.remove('scale-90');
            modal.classList.add('flex'); // Add flex after removing hidden
        }

        function hideConfirmation() {
            modal.classList.add('opacity-0');
            modal.querySelector('div').classList.add('scale-90');
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }, 300); // Match transition duration
        }
    </script>
</body>
</html>
